<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.utep.cs.cs4330.mypricewatcher">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/my_price_watcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/my_price_watcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyPriceWatcherTheme">
        <service
            android:name=".ConnectionCheckService"
            android:exported="false"></service>

        <activity android:name=".NoInternetActivity" />
        <activity android:name=".ItemFormActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
    </application>

</manifest>